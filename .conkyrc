alignment middle_right
background no
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color black
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
extra_newline no
gap_x 10
gap_y 50
max_text_width 0
maximum_width 500
minimum_size 350 130
no_buffers yes
out_to_console no
out_to_stderr no
override_utf8_locale no
own_window yes
own_window_argb_visual yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent yes
own_window_type window
top_cpu_separate true
total_run_times 0
update_interval 1.0
uppercase no
use_xft yes
xftalpha 1
xftfont Terminus:size=10
#xftfont DejaVu Sans Mono:size=10

TEXT
$nodename - $sysname $kernel on $machine
$hr
${color grey}Uptime:$color $uptime

${color grey}Frequency (in GHz):$color $freq_g
${color grey}RAM Usage:$color $mem/$memmax - $memperc% ${membar 4}
${color grey}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}

${color grey}CPU0 Usage:$color ${cpu cpu0}% ${cpubar cpu0}
${color grey}CPU2 Usage:$color ${cpu cpu1}% ${cpubar cpu1}
${color grey}CPU3 Usage:$color ${cpu cpu2}% ${cpubar cpu2}
${color grey}CPU4 Usage:$color ${cpu cpu3}% ${cpubar cpu3}
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes

$hr
${color grey}Disk Space:
$color${fs_used /}/${fs_size /} ${fs_bar 6 /}
$hr
${color grey}${if_existing  /proc/net/route enp0s26u1u2}Wired
IP address: $alignr ${addr enp0s26u1u2}
${wireless_link_bar enp0s26u1u2}
${upspeedgraph enp0s26u1u2}
Up: ${upspeed enp0s26u1u2} $alignr total: ${totalup enp0s26u1u2}
${downspeedgraph enp0s26u1u2}
Down: ${downspeed enp0s26u1u2} $alignr total: ${totaldown enp0s26u1u2}
$endif${if_existing /proc/net/route wlp3s0}Wireless

SSID${alignr}${wireless_essid wlp3s0}
IP address: $alignr ${addr wlp3s0}
Signal Strength: $alignr${wireless_link_qual_perc wlp3s0} %
${wireless_link_bar wlp3s0}
${upspeedgraph wlp3s0}
Up: ${upspeed wlp3s0} $alignr total: ${totalup wlp3s0}
${downspeedgraph wlp3s0}
Down: ${downspeed wlp3s0} $alignr total: ${totaldown wlp3s0}
$endif
$hr
CPU
${color grey}Name${goto 150}PID${goto 215}CPU%
${color lightgrey}${top name 1}${goto 150}${top pid 1}${goto 200}${top cpu 1}%
${color lightgrey}${top name 2}${goto 150}${top pid 1}${goto 200}${top cpu 2}%
${color lightgrey}${top name 3}${goto 150}${top pid 1}${goto 200}${top cpu 3}%
${color lightgrey}${top name 4}${goto 150}${top pid 1}${goto 200}${top cpu 4}%

Memory
${color grey}Name${goto 150}PID${goto 215}MEM%
${color lightgrey}${top_mem name 1}${goto 150}${top_mem pid 1}${goto 200}${top_mem mem 1}%
${color lightgrey}${top_mem name 2}${goto 150}${top_mem pid 2}${goto 200}${top_mem mem 2}%
${color lightgrey}${top_mem name 3}${goto 150}${top_mem pid 3}${goto 200}${top_mem mem 3}%
${color lightgrey}${top_mem name 4}${goto 150}${top_mem pid 4}${goto 200}${top_mem mem 4}%
